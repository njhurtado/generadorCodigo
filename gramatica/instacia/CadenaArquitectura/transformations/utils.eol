//retorna el tipo de dato java
operation String toType () : String {
	if(self='VARCHAR2' or self='CHAR')
	return 'java.lang.String';
	else if(self='NUMBER')
	return 'java.math.BigInteger';
	else if(self='TIMESTAMP')
	return 'java.sql.Timestamp';
	else 
	return self;
	

}



